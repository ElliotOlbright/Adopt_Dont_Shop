<h1>App Show page</h1>

<h2 style="text-align: center;"> <%= @app.name %> </h2>
<p>
Address: <%= @app.street %> <%= @app.city%>, <%= @app.state %>, <%= @app.zip_code %><br>
I'm a good fit because: <%= @app.description %><br>

Application Status: <%= @app.application_status %>
</p>


<h1>Add a pet to this Application</h1>

<%= form_tag "/admin/applications/#{@app.id}", method: :get do %>
  <p>
    <%= label_tag :search_by_name, 'Search by Name' %><br>
    <%= text_field_tag :search_by_name %><br>

    <%= submit_tag 'Search'%>
  </p>
<% end %>

<% @pets.each do |pet| %>
  <div>
    <p><%= pet.name %></p> <p><%= button_to 'Adopt This pet', "/admin/applications/#{@app.id}", method: :patch, params: {pet_id: pet.id} %></p><br>
  </div>
<% end %>

<p>Pets on this App</p>

<% @app.pets.each do |p| %>
<% require 'pry'; binding.pry %>
  <%= p.name %>
  <%= p.pet_applications.status %>
<% end %>
