<h1>App Show page</h1>

<%= render 'app_show' %>

<% if @app.pets.count == 0 %>
  <%= render 'no_pets' %>
<% else %>
  <%= render 'pets_on_app' %>
<% end %>

<% if @app.application_status == 'pending' %>
  <%= render 'search_pets' %>
<% end %>

<% if @app.application_status == 'pending' %>
  <%= render 'adopt_pet' %>
<% end %>

<% unless @app.application_status == 'pending' %>
  <%= render 'submit' %>
<% end %>


